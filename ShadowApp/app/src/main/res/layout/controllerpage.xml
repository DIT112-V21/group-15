<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient">

    <include
        layout="@layout/progress_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="194dp"
        tools:layout_editor_absoluteY="367dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="255dp"
        android:layout_height="86dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/bt_command"
        android:fontFamily="@font/aldrich"
        android:rotationX="0"
        android:shadowColor="#000000"
        android:text="@string/follow_car"
        android:textSize="25sp"
        app:backgroundTint="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.914"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.008"
        app:strokeColor="#FFFFFF"
        app:strokeWidth="1sp" />

    <Button
        android:id="@+id/left"
        android:layout_width="118dp"
        android:layout_height="120dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bt_command"
        android:fontFamily="@font/aldrich"
        android:onClick="left"
        android:rotationY="0"
        android:text="@string/leftArrow"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="50sp"
        app:backgroundTint="?android:attr/windowBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/forward"
        app:strokeColor="#FFFFFF"
        app:strokeWidth="1sp" />

    <Button
        android:id="@+id/forward"
        android:layout_width="380dp"
        android:layout_height="90dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/bt_command"
        android:fontFamily="@font/aldrich"
        android:onClick="forward"
        android:rotationX="0"
        android:shadowColor="#000000"
        android:text="@string/upArrow"
        android:textSize="50sp"
        app:backgroundTint="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.619"
        app:strokeColor="#FFFFFF"
        app:strokeWidth="1sp" />

    <Button
        android:id="@+id/right"
        android:layout_width="118dp"
        android:layout_height="120dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/bt_command"
        android:fontFamily="@font/aldrich"
        android:onClick="right"
        android:rotationY="0"
        android:text="@string/rightArrows"
        android:textColor="#FFFFFF"
        android:textSize="50sp"
        app:backgroundTint="?android:attr/windowBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/forward"
        app:strokeColor="#FFFFFF"
        app:strokeWidth="1sp" />

    <Button
        android:id="@+id/reverse"
        android:layout_width="380dp"
        android:layout_height="90dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/bt_command"
        android:fontFamily="@font/aldrich"
        android:onClick="reverse"
        android:rotationX="0"
        android:text="@string/downArrow"
        android:textSize="50sp"
        app:backgroundTint="?android:attr/windowBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stop"
        app:strokeColor="#FFFFFF"
        app:strokeWidth="1sp" />

    <Button
        android:id="@+id/stop"
        android:layout_width="118dp"
        android:layout_height="120dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bt_command"
        android:fontFamily="@font/aldrich"
        android:onClick="stop"
        android:rotationY="0"
        android:text="@string/stopbutton"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="50sp"
        app:backgroundTint="?android:attr/windowBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/forward"
        app:strokeColor="#FFFFFF"
        app:strokeWidth="1sp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/bt_command"
        android:fontFamily="@font/aldrich"
        android:onClick="returnHome"
        android:text="@string/home"
        android:textSize="20sp"
        app:backgroundTint="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.008"
        app:strokeColor="#FFFFFF"
        app:strokeWidth="1sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="386dp"
        android:layout_height="350dp"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:contentDescription="@string/caroverlook"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.205" />

</androidx.constraintlayout.widget.ConstraintLayout>